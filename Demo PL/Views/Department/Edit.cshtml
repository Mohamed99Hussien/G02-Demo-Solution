@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Eidt Department</h1>
<br />
<br />
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
      @*<span asp-validation-for="Code" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
       @* <span asp-validation-for="Name" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        @*<span asp-validation-for="DateOfCreation" class="text-danger"></span>*@
    </div>

    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-info">Back To List</a>
</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />

}

